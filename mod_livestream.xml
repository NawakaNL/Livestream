<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.5.0" client="site" method="upgrade">
    <name>Livestream</name>
    <author>Tristan de Boer</author>
    <authorEmail>info@tristandeboer.nl</authorEmail>
    <creationDate>8 maart 2018</creationDate>
    <copyright>Copyright 2018 Tristan de Boer</copyright>
    <license>GNU/GPL, see LICENSE.md</license>
    <version>1.0.0</version>
    <description>
      Een module om een Livestream te tonen.
    </description>
    <files>
        <filename>mod_livestream.xml</filename>
        <filename module="mod_livestream">mod_livestream.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    <config>
      <fields name="params">
        <fieldset name="basic">
          <field name="url" type="text" required="true" hint="https://" label="EMBED URL" description="Vul hier de URL van de livestream in." />

          <field name="color" type="color" default="#010050"
	            label="Kleur"
	            description="Kleur" />

        </fieldset>
      </fields>
    </config>
</extension>
